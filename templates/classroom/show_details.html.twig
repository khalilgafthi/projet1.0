{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper table { width: 100%; border-collapse: collapse; }
        .example-wrapper th, .example-wrapper td { border: 1px solid #ccc; padding: 8px; text-align: left; }
    </style>

    <div class="example-wrapper">
        {% for classroom in classroom %}
            <table>
                <th>ID</th>
                <td>{{ classroom.getId() }}</td>
                <th>Nbtable</th>
                <td>{{ classroom.getNbTable() | upper }}</td>
                <td><a href="{{ path('classroom_delete', {id: classroom.id}) }}">Delete</a></td>
                <td><a href="{{ path('app_classroom_edit', {id: classroom.id}) }}">Edit</a></td>
            </table>
        {% endfor %}
    </div>
{% endblock %}
